            margin: 10px;
            float: left;
        }

        .red {

            background-color: red;
        }

        .blue {

        background-color: blue;
        display: none;
        margin-left: 80px;
        
        }

        .clear {

            clear:both;
        }

        button {

            margin-left: 40px;
